<doc xmlns="https://hyperview.org/hyperview">
    <screen>
        <styles>

            <style id="header"
                alignItems="center"
                backgroundColor="white"
                borderBottomColor="#ccc"
                borderBottomWidth="1"
                flexDirection="row"
                justifyContent="space-between"
                paddingHorizontal="24"
                paddingVertical="20"
            />
            <style id="header-title"
                color="black"
                fontSize="24"
                fontWeight="500"
            />
            <style id="header-button"
                color="blue"
                fontSize="20"
            />

            <style id="body" flex="1" />

            <style id="main"
                flex="1"
                backgroundColor="#fff"
            />

            <style id="search-field"
                backgroundColor="#eee"
                borderBottomColor="#ddd"
                borderBottomWidth="1"
                fontSize="20"
                paddingHorizontal="24"
                paddingVertical="16"
            />

            <style id="contact-item"
                backgroundColor="#fff"
                borderBottomColor="#ddd"
                borderBottomWidth="1"
                paddingHorizontal="24"
                paddingVertical="16"
            />
            <style id="contact-item-label"
                color="black"
                fontSize="20"
                fontWeight="300"
            />

            <style id="details"
                fontWeight="500"
                marginVertical="32"
                textAlign="center"
            />
            <style id="contact-name"
                fontSize="24"
                fontWeight="500"
                marginVertical="32"
                textAlign="center"
            />
            <style id="contact-section"
                fontSize="24"
                margin="8"
                marginHorizontal="24"
                padding="8"
            />
            <style id="contact-section-label"
                color="#666"
                fontSize="20"
                marginBottom="4"
            />
            <style
                id="contact-section-info"
                fontSize="20"
                fontWeight="500"
            />

            <style id="edit-field"
                borderBottomWidth="1"
                borderColor="#ccc"
                paddingHorizontal="24"
                paddingVertical="16"
            />
            <style id="edit-field-text"
                fontSize="16"
            />
            <style id="edit-field-error"
                color="red"
                fontSize="16"
                marginTop="4"
            />

            <style id="button"
                backgroundColor="white"
                borderBottomWidth="1"
                borderColor="#ddd"
                paddingHorizontal="24"
                paddingVertical="16"
            />
            <style id="button-label"
                color="blue"
                fontSize="16"
            />

        </styles>
        <body style="body" safe-area="true">
            <header style="header">
                {% block header %}
                    <text style="header-title">Contact.app</text>
                {% endblock %}
            </header>
            <view style="main">
                {% block content %}{% endblock %}
            </view>
        </body>
    </screen>
</doc>
