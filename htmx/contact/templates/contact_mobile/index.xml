{% extends "layout/base.xml" %}
{% load url_add_query %}

{% block content %}
    <form>

        <!-- Search-as-you-type -->
        <text-field name="q" value="" placeholder="Searchâ€¦" style="search-field">
            <behavior
                trigger="change"
                action="replace-inner"
                target="contacts-list"
                href="{% url_add_query request.get_full_path rows_only='true' %}"
                verb="get"
            />
        </text-field>

        <!-- Pull-to-refresh -->
        <list
            id="contacts-list"
            trigger="refresh"
            action="replace-inner"
            target="contacts-list"
            href="{% url_add_query request.get_full_path rows_only='true' %}"
            verb="get"
        >

        <list id="contacts-list">
            {% include "contact_mobile/rows.xml" %}
        </list>

    </form>
{% endblock %}
